    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/soft_marshmallow"
        android:gravity="center"
        android:text="Timer 1:00"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="italic"
       />

    <FrameLayout
        android:id="@+id/gameFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"

        android:layout_marginTop="20dp">




        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">


            <ImageView
                android:id="@+id/box"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_marginStart="-55dp"
                android:src="@drawable/cup2"
                app:layout_constraintStart_toEndOf="@+id/moodo"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/moodo"
                android:layout_width="90dp"
                android:layout_height="90dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/moodo2" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:id="@+id/left_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/left"
            android:layout_marginLeft="20dp"
            android:visibility="invisible"
            android:layout_gravity="bottom"/>

        <ImageView
            android:id="@+id/balck"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:src="@drawable/bomb"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/orange"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/circle"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/pink"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/point"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/speed"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/speed"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/stop_time"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/slow"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/startLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/soft_marshmallow"
            android:gravity="center"
            android:onClick="startGame"
            android:text="Tab TO Start"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">


            </LinearLayout>


            <LinearLayout
                android:id="@+id/right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/right_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/right"
                android:layout_marginEnd="20dp"
                android:visibility="invisible"
                android:layout_gravity="bottom"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/cloud1"
            android:layout_width="200dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/cloud"
            />
        <ImageView
            android:id="@+id/cloud2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/cloud"
            android:layout_gravity="end"
            />
        <ImageView
            android:id="@+id/cloud3"
            android:layout_width="100dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/cloud"
            android:layout_gravity="end"
            android:layout_marginEnd="80dp"
            android:layout_marginTop="60dp"
            />

        <ImageView
            android:id="@+id/cloud4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/cloud"
            android:layout_gravity="start"
            android:layout_marginTop="100dp"
            />

    </FrameLayout>


</LinearLayout>