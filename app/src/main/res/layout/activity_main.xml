<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8F8E8E"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:id="@+id/scoreLevel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"

            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"

            android:text="Score :"
            android:textColor="#DFE4E4"
            android:textSize="26sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="pause"
            android:textColor="#DFE4E4"
            android:textSize="15sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Timer 1:00"
        android:textColor="#DFE4E4"
        android:textSize="26sp"
        android:textStyle="italic"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/gameFrame"
        android:layout_width="350dp"
        android:layout_height="550dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#DFE4E4">

        <ImageView
            android:id="@+id/box"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_games"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/balck"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/bom"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/orange"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_food"
            android:visibility="invisible" />
        <!--       <ImageView
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:src="@drawable/pink"
                   android:id="@+id/pink"
                   android:visibility="invisible"/>-->


        <LinearLayout
            android:id="@+id/startLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Catch The ball"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/highScoreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:text="High Score: 300"
                android:textColor="#100F0F"
                android:textSize="23sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#10EA40"
                android:onClick="startGame"
                android:text="Start"
                android:textSize="24sp" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#ff22"
                android:onClick="quitGame"
                android:text="Exit"
                android:textColor="#fff"
                android:textSize="26sp" />


        </LinearLayout>


    </FrameLayout>

</LinearLayout>